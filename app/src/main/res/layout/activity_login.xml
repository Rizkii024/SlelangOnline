<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/relativeUp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="#fff">

        <ImageView
            android:id="@+id/tvJudulLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            />


        <RelativeLayout
            android:id="@+id/relativeLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_below="@id/tvJudulLogin"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:background="@drawable/bg_shape_corner">

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvBarLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginLeft="75dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/relativeUp"
        android:layout_marginTop="@dimen/_18sdp"
        android:textSize="@dimen/_22sdp"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tvBarPengguna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengguna"
        android:layout_marginLeft="165dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/relativeUp"
        android:layout_marginTop="@dimen/_18sdp"
        android:textSize="@dimen/_22sdp"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="#45AAF2"/>

    <TextView
        android:id="@+id/tvHintUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@id/tvBarLogin"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="#fff"
        android:fontFamily="@font/nunito_light"/>

    <ImageView
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_below="@+id/edtUsername"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-47dp"
        android:background="@drawable/person" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:backgroundTint="#4CD137"
        android:layout_below="@id/tvHintUsername"
        android:hint="Masukkan Email"
        android:fontFamily="@font/nunito"/>

    <TextView
        android:id="@+id/tvHintPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@id/edtUsername"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="#fff"
        android:fontFamily="@font/nunito_light"/>

    <ImageView
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_below="@+id/tvHintPass"
        android:layout_marginLeft="30dp"
        android:background="@drawable/lock"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:backgroundTint="#4CD137"
        android:layout_below="@id/tvHintPass"
        android:hint="*************"
        android:inputType="textPassword"
        android:fontFamily="@font/nunito"/>

    <TextView
        android:id="@+id/btnLogin"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_42sdp"
        android:text="Login"
        android:textSize="@dimen/_20sdp"
        android:layout_below="@id/edtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="#fff"
        android:background="@drawable/bg_shape_full"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvGapunyaAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak Punya akun?"
        android:layout_below="@id/btnLogin"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/nunito"/>

    <TextView
        android:id="@+id/tvLinkRegis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:layout_below="@id/btnLogin"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_toRightOf="@id/tvGapunyaAkun"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/nunito"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="#45AAF2"/>




</RelativeLayout>